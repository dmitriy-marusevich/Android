<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/nameCityTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tempCityTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/empty_list" />

            <CheckBox
                android:id="@+id/overcastCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/set_overcast"
                android:textSize="18sp"
                android:checked="true"/>

            <CheckBox
                android:id="@+id/humidityCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/set_humidity"
                android:textSize="18sp"
                android:checked="true"/>

            <TextView
                android:id="@+id/overcastTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/humidityTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>
